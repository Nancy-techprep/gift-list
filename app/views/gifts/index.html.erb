<div>
  <div>
    <h1>
      List of all gifts
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new gift
    </h2>

    <form action="/insert_gift" method="post">
      <div>
        <label for="occasion_id_box">
          Occasion
        </label>

        <input type="text" id="occasion_id_box" name="query_occasion_id">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="note_box">
          Note
        </label>

        <textarea id="note_box" name="query_note" rows="3"></textarea>
      </div>

      <div>
        <label for="loved_one_id_box">
          Loved one
        </label>

        <input type="text" id="loved_one_id_box" name="query_loved_one_id">
      </div>

      <button>
        Create gift
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Occasion
        </th>

        <th>
          User
        </th>

        <th>
          Note
        </th>

        <th>
          Loved one
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_gifts.each do |a_gift| %>
      <tr>
        <td>
          <%= a_gift.id %>
        </td>

        <td>
          <%= a_gift.occasion_id %>
        </td>

        <td>
          <%= a_gift.user_id %>
        </td>

        <td>
          <%= a_gift.note %>
        </td>

        <td>
          <%= a_gift.loved_one_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_gift.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_gift.updated_at) %> ago
        </td>

        <td>
          <a href="/gifts/<%= a_gift.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
